<AnchorPane fx:id="addPaymentForm" prefHeight="400.0" prefWidth="474.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.AddPaymentFormController">
   <children>
      <Label layoutX="149.0" layoutY="41.0" prefHeight="16.0" prefWidth="178.0" text="Add Payment">
         <font>
            <Font name="Sylfaen" size="26.0" />
         </font>
      </Label>
      <Label layoutX="90.0" layoutY="115.0" text="Student ID : " textFill="#0059ff">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="90.0" layoutY="159.0" text="Student Name : " textFill="#0059ff">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="90.0" layoutY="202.0" text="Program : " textFill="#0059ff">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="90.0" layoutY="248.0" text="Payment : " textFill="#0059ff">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="txtStudentId" editable="false" layoutX="214.0" layoutY="111.0">
         <effect>
            <Blend mode="COLOR_BURN" />
         </effect></TextField>
      <TextField fx:id="txtStudentName" editable="false" layoutX="214.0" layoutY="155.0">
         <effect>
            <Blend mode="COLOR_BURN" />
         </effect></TextField>
      <TextField fx:id="txtPayment" layoutX="214.0" layoutY="244.0" onKeyReleased="#txtPaymentKeyAction">
