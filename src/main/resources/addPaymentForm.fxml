            <Font name="DejaVu Serif Condensed Bold" size="15.0" />
         </font>
      </JFXButton>
      <JFXButton layoutX="132.0" layoutY="313.0" onAction="#btnCancelOnAction" prefHeight="31.0" prefWidth="84.0" style="-fx-background-color: #f2120e;" text="Cancel" textFill="WHITE">
         <font>
            <Font name="DejaVu Serif Condensed Bold" size="15.0" />
         </font>
      </JFXButton>
      <TextField fx:id="txtProgram" editable="false" layoutX="214.0" layoutY="198.0">
         <effect>
            <Blend mode="COLOR_BURN" />
         </effect></TextField>
   </children>
</AnchorPane>
